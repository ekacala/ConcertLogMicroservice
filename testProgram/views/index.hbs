{{!-- Create a table --}}
<table id="concert-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>DELETE</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.concertID}}>
            <td>{{this.concertID}}</td>
            <td>{{this.userID}}</td>
            <td>{{this.artist}}</td>
            <td>{{this.venue}}</td>
            <td>{{this.dateAttended}}</td>
            <td>{{this.notes}}</td>
           <!-- <td>
                <form id="update-concert-form-select" method="POST" action="/update-concert-form-select">
                    <input type="hidden" value={{this.concertID}} name="input-concertID" id="input-concertID">
                    <input type="submit" id="update-submit"> onclick="refreshPage()">
                </form>
            </td>-->
            <td>
                <form id="delete-concert-form" method="POST" action="/delete-concert-form">
                    <input type="hidden" value={{this.concertID}} name="input-concertID" id="input-concertID">
                    <input type="submit" id="delete-submit" value="Delete">
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data</h2>
<p>To add a new concert, please enter the concert information below and click 'Submit'!</p>
<form id="add-concert-form" method="POST" action="/add-concert-form">
    <input type="hidden" value="1" name="input-userID" id="input-userID">

    <label for="input-artist">Artist: </label>
    <input type="text" name="input-artist" id="input-artist">
    
    <label for="input-venue">Venue: </label>
    <input type="text" name="input-venue" id="input-venue">

    <label for="input-dateAttended">Date Attended: </label>
    <input type="date" name="input-dateAttended" id="input-dateAttended">

    <label for="input-notes">Notes: </label>
    <input type="text" name="input-notes" id="input-notes">

    <input type="submit" id="update-submit" >
</form>

<h2>Updating A User's Concert Form</h2>
<p>To update a specific user's concert select the artist and date from the drop-down menu on the left</p>
<form id="update-concert-form" method="POST" action="/update-concert-form">

    <label for="input-artist-date">Artist and Date: </label>
    <select name="input-artist-date" id="mySelect">
        <option value="test">Select a Show</option>
        {{#each data}}
        <option value="{{this.concertID}}">{{this.artist}} on {{this.dateAttended}}</option>
        {{/each}}
    </select>

    <label for="input-artist-update">Artist: </label>
    <input type="text" name="input-artist-update" id="input-artist-update">

    <label for="input-venue-update">Venue: </label>
    <input type="text" name="input-venue-update" id="input-venue-update">

    <label for="input-dateAttended">Date Attended: </label>
    <input type="date" name="input-dateAttended-update" id="input-dateAttended-update">

    <label for="input-notes-update">Notes: </label>
    <input type="text" name="input-notes-update" id="input-notes-update">

    <input type="submit">

</form>

